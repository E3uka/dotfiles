copy-on-select = clipboard
cursor-color = 86ADAD
cursor-style = block
cursor-style-blink = false
font-size = 13
mouse-hide-while-typing = true
split-divider-color = F2F2F2

window-inherit-working-directory = true
window-save-state = always

keybind = ctrl+a>shift+5=new_split:right
keybind = ctrl+a>shift+'=new_split:down

keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>l=goto_split:right

keybind = ctrl+a>c=new_tab
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = ctrl+a>right=resize_split:right,50
keybind = ctrl+a>left=resize_split:left,50
keybind = ctrl+a>up=resize_split:up,50
keybind = ctrl+a>down=resize_split:down,50

keybind = ctrl+a>,=prompt_surface_title
keybind = ctrl+a>ctrl+l=clear_screen
keybind = ctrl+a>f=toggle_fullscreen
keybind = ctrl+a>r=reload_config
keybind = ctrl+a>z=toggle_split_zoom
keybind = ctrl+a>x=close_surface
